<% if logged_in? %>
<p><%= @tweet.content %></p>

<% if authorized?(@tweet) %>

<a href="/tweets/<%= @tweet.id %>/edit">Edit Tweet</a>
<br>
<form action="/tweets/<%= @tweet.id %>" method="post">
  <a href="/tweets/<%= @tweet.id %>">Delete Tweet</a>
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="submit" value="Delete Tweet">
</form>
<% end %>
<% end %>
